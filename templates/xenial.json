{
  "builders": [
	{
	  "name": "vmware",
	  "type": "vmware-iso",
	  "boot_command": [
        "<esc><f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "url=http://{{.HTTPIP}}:{{.HTTPPort}}/xenial.preseed ",
        "language={{user `language`}} ",
        "country={{user `country`}} ",
        "locale={{user `locale`}} ",
        "hostname={{user `vm_name`}} ",
        "domain={{user `domain`}} ",
        "interface=auto ",
        "console-setup/ask_detect=false ",
        "keyboard-configuration/layoutcode={{user `keyboard`}} ",
        "vga=788 noprompt quiet --<enter>"
      ],
	  "headless": "{{user `headless`}}",
	  "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
	  "vmdk_name": "{{user `vm_name`}}",
	  "disk_type_id": 0,
	  "http_directory": "{{pwd}}/preseeds/",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "iso_target_path": "{{pwd}}/{{user `iso_file`}}",
      "iso_urls": ["{{user `iso_path_external`}}/{{user `iso_file`}}"],
	  "communicator": "ssh",
	  "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
	  "ssh_timeout": "30m",
	  "output_directory": "build/{{isotime \"2006-01-02 03-04\"}}/{{user `vm_name`}}/",
      "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -E -S poweroff",
	  "vm_name": "{{user `vm_name`}}"
	}
  ],
  "description": "{{user `description`}}",
  "min_packer_version": "1.1.3",
  "provisioners": [
    {
	  "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -E -S '{{.Path}}'",
      "inline": [
        "echo '{{user `ssh_username`}} ALL=(ALL) NOPASSWD: ALL' > /etc/sudoers.d/99{{user `ssh_username`}}",
        "chmod 0440 /etc/sudoers.d/99{{user `ssh_username`}}",
		"echo {{user `vm_name`}} > /etc/hostname",
		"sed -i 's/base-xenial/{{user `vm_name`}}/g' /etc/hosts"
      ]     
    },
    {
	  "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -E -S '{{.Path}}'",
	  "environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
      "inline": [
        "apt-get update",
        "apt-get --yes dist-upgrade"
      ]
    },
	{
      "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -E -S '{{.Path}}'",
	  "environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
      "inline": [
        "apt-get --yes install vim htop python"
      ]
    },
	{
	  "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -E -S '{{.Path}}'",
      "inline": [
        "reboot"
      ],
	  "expect_disconnect": "true"
    },
    {
	  "type": "shell",
	  "pause_before": "10s",
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -E -S '{{.Path}}'",
	  "environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
      "inline": [
	    "apt-get --yes autoremove --purge",
        "apt-get clean"
      ]
    },
    {
	  "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -E -S '{{.Path}}'",
      "inline": [
        "dd if=/dev/zero of=/ZEROFILL bs=16M || true",
        "rm /ZEROFILL",
        "sync"
      ]
    }
  ],
  "variables": {
    "boot_wait": "5s",
    "country": "DE",
    "description": "Base box for 64-bit x86 Ubuntu Xenial Xerus 16.04.x LTS",
    "disk_size": "4000",
    "domain": "",
    "headless": "false",
    "http_directory": ".",
    "iso_checksum_type": "sha256",
    "iso_checksum_url": "http://releases.ubuntu.com/16.04.3/SHA256SUMS",
    "iso_file": "ubuntu-16.04.3-server-amd64.iso",
    "iso_path_external": "http://releases.ubuntu.com/16.04.3",
    "keyboard": "de",
    "language": "en",
    "locale": "en_US.UTF-8",
    "preseed_file": "ubuntu/xenial/base.preseed",
    "ssh_password": "ubuntu",
    "ssh_username": "ubuntu",
    "version": "0.0.2",
    "vm_name": "base-xenial"
  }
}

